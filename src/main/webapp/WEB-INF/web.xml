<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0"
         metadata-complete="false">

    <display-name>Library Management System</display-name>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!-- LoginServlet -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- SearchDocumentServlet -->
    <servlet>
        <servlet-name>SearchDocumentServlet</servlet-name>
        <servlet-class>servlet.SearchDocumentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchDocumentServlet</servlet-name>
        <url-pattern>/searchDocument</url-pattern>
    </servlet-mapping>

    <!-- SearchSupplierServlet -->
    <servlet>
        <servlet-name>SearchSupplierServlet</servlet-name>
        <servlet-class>servlet.SearchSupplierServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchSupplierServlet</servlet-name>
        <url-pattern>/searchSupplier</url-pattern>
    </servlet-mapping>

    <!-- AddNewImportingInvoiceServlet -->
    <servlet>
        <servlet-name>AddNewImportingInvoiceServlet</servlet-name>
        <servlet-class>servlet.AddNewImportingInvoiceServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddNewImportingInvoiceServlet</servlet-name>
        <url-pattern>/addImportingInvoice</url-pattern>
    </servlet-mapping>

</web-app>
